
@model Dictionary<ProductViewModel, int>

<div class="table-responsive cart_info">
    <table class="table table-condensed">
        <thead>
            <tr class="cart_menu">
                <td class="image">Товар</td>
                <td class="description">Описание</td>
                <td class="price">Цена</td>
                <td class="quantity">Количество</td>
                <td class="total">Итого</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="cart_product">
                        <a href=""><img src="~/images/shop/@item.Key.ImageUrl" alt=""></a>
                    </td>
                    <td class="cart_description">
                        <h4>
                            <a asp-controller="Catalog"
                               asp-action="ProductDetails"
                               asp-route-id="@item.Key.Id">@item.Key.Name</a>
                        </h4>
                        <p>Web ID: 1089772</p>
                    </td>
                    <td class="cart_price">
                        <p>@item.Key.Price.ToString("C")</p>
                    </td>
                    <td class="cart_quantity">
                        <div class="cart_quantity_button">
                            <a asp-controller="Cart"
                               asp-action="AddToCart"
                               asp-route-id="@item.Key.Id"
                               asp-route-returnUrl="@Context.Request.Path"
                               class="cart_quantity_up"><i class="fa fa-plus"></i></a>
                            <input class="cart_quantity_input"
                                   type="text"
                                   name="quantity"
                                   value="@item.Value"
                                   autocomplete="off"
                                   size="2">
                            <a asp-controller="Cart"
                               asp-action="DecrementFromCart"
                               asp-route-id="@item.Key.Id"
                               class="cart_quantity_down"><i class="fa fa-minus"></i></a>
                        </div>
                    </td>
                    <td class="cart_total">
                        <p class="cart_total_price">@((item.Value * item.Key.Price).ToString("C"))</p>
                    </td>
                    <td class="cart_delete">
                        <a asp-controller="Cart"
                           asp-action="RemoveFromCart"
                           asp-route-id="@item.Key.Id"
                           class="cart_quantity_delete"><i class="fa fa-times"></i></a
                        >
                    </td>
                </tr>
            }

            @* Не придумал как лучше можно сделать. Может создать отдельный компонент для этого кусочка? *@
            @if (ViewBag.Title == "Checkout")
            {
                <tr>
                    <td colspan="4">&nbsp;</td>
                    <td colspan="2">
                        <table class="table table-condensed total-result">
                            <tr>
                                <td>Cart Sub Total</td>
                                <td>$59</td>
                            </tr>
                            <tr>
                                <td>Exo Tax</td>
                                <td>$2</td>
                            </tr>
                            <tr class="shipping-cost">
                                <td>Shipping Cost</td>
                                <td>Free</td>
                            </tr>
                            <tr>
                                <td>Total</td>
                                <td><span>$61</span></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>