@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Пользователи";
    Layout = "_Layout";
}

<div class="container">
    <hr />
    <a asp-action="Edit" class="btn btn-success">Добавить</a>
    <hr />

    <table class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Логин</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Edit"
                           asp-route-id="@item.Id">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                    <td>@item.Login</td>
                    <td>
                        <a asp-action="UserCard"
                           asp-route-id=@item.Id>Детали</a>
                    </td>
                    <td>
                        <a asp-action="Delete"
                           asp-route-id="@item.Id">
                            <i class="fa fa-cut"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>