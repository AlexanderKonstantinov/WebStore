@model EmployeeView
    
@{
    ViewData["Title"] = "Редактирование сотрудника";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<a class="btn btn-dark"
   asp-action="EmployeeList">Вернуться к списку</a>

<h2>@ViewData["Title"]</h2>
<h4>Сотрудник</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />

            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Имя</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SecondName" class="control-label">Фамилия</label>
                <input asp-for="SecondName" class="form-control" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Patronymic" class="control-label">Отчество</label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Age" class="control-label">Возраст</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sex" class="control-label">Пол</label>
                <select asp-for="Sex" asp-items="Html.GetEnumSelectList<Sex>()" class="form-control">
                    <option selected="selected" disabled="disabled">Выберите пол</option>
                </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Position" class="control-label">Должность</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SecretName" class="control-label">Кодовое прозвище</label>
                <input asp-for="SecretName" class="form-control" />
                <span asp-validation-for="SecretName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>