@using WebStore.Models.Account
@model WebStore.Models.Account.RegisterModel

@{
    ViewData["Title"] = "Регистрация";
    Layout = "_Layout";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">

            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger" />
                <div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Введите Email</label>
                        <input type="text" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Введите пароль</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Войти" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>