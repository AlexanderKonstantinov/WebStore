@using WebStore.Models.Account
@model LoginViewModel

@{
    ViewData["Title"] = "Аутентификация";
    Layout = "_Layout";
}

<section id="form"><!--form-->
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="login-form"><!--login form-->
                <h2>Login to your session</h2>
                <form method="post" asp-antiforgery="true" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="ReturnUrl" type="hidden" />

                    <input asp-for="EmailOrUserName" placeholder="@nameof(@Model.EmailOrUserName)" />
                    <span asp-validation-for="EmailOrUserName" class="text-danger"></span>

                    <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <span>
                        <input asp-for="RememberMe" class="checkbox">
                        Remember me
                    </span>
                    <button type="submit" class="btn btn-default">Enter</button>
                </form>
            </div><!--/login form-->
        </div>
    </div>
</section><!--/form-->